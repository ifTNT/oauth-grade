doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  title= title
div
  nav.navbar.navbar-dark.fixed-top.bg-dark.flex-md-nowrap.p-0.shadow
    .container-fluid
      a.navbar-brand.ml-5.mr-auto(href='/')= title
      .d-flex
        span.navbar-text.disabled= id
        ul.navbar-nav.px-3
          li.nav-item.text-nowrap
            a.nav-link(href='/auth/logout') 登出
  .container.mt-5
    .row.justify-content-md-center
      .col.col-md-6.col-lg-4
        table.table.table-striped.table-hover
          thead.text-center
            tr
              th(scope="col")
              th(scope="col") 佔比
              th(scope="col") 原始分數
          tbody.text-center
            each grade in grades
              tr
                th(scope="row")= grade.title
                td= grade.percent
                td= grade.score